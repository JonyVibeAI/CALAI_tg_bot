generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  telegramId    String    @unique
  firstName     String?
  lastName      String?
  username      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Роль
  isAdmin       Boolean   @default(false)
  
  // Подписка
  subscriptionEnd DateTime?  // Дата окончания подписки (null = нет подписки)
  
  // Анализы
  freeAnalysesLeft Int      @default(3)   // Бесплатные анализы (по умолчанию 3)
  bonusAnalyses    Int      @default(0)   // Бонусные от промокодов
  totalAnalysesUsed Int     @default(0)   // Всего использовано
  
  // Profile / onboarding data
  age           Int?
  heightCm      Int?
  weightKg      Float?
  gender        Gender?
  activityLevel ActivityLevel?
  goal          GoalType?
  dailyCalories Int?
  
  meals             Meal[]
  payments          Payment[]
  promoActivations  PromoActivation[]
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum ActivityLevel {
  SEDENTARY
  LIGHT
  MODERATE
  ACTIVE
  VERY_ACTIVE
}

enum GoalType {
  LOSE_WEIGHT
  MAINTAIN
  GAIN_WEIGHT
}

model Meal {
  id            Int          @id @default(autoincrement())
  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        Int
  createdAt     DateTime     @default(now())
  date          DateTime
  type          MealType
  totalCalories Int
  totalProtein  Float
  totalFat      Float
  totalCarbs    Float
  source        MealSource
  
  items         MealItem[]
}

enum MealType {
  BREAKFAST
  LUNCH
  DINNER
  SNACK
}

enum MealSource {
  TEXT
  PHOTO
  MANUAL
}

model MealItem {
  id       Int    @id @default(autoincrement())
  meal     Meal   @relation(fields: [mealId], references: [id], onDelete: Cascade)
  mealId   Int
  name     String
  grams    Float
  calories Int
  protein  Float
  fat      Float
  carbs    Float
}

model Product {
  id             Int    @id @default(autoincrement())
  name           String @unique
  caloriesPer100g Int
  proteinPer100g Float
  fatPer100g     Float
  carbsPer100g   Float
}

// Платежи через Telegram Stars
model Payment {
  id                  Int      @id @default(autoincrement())
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId              Int
  
  telegramPaymentId   String   @unique  // ID платежа от Telegram
  stars               Int                // Количество звёзд
  months              Int      @default(1)  // Месяцев подписки
  
  createdAt           DateTime @default(now())
}

// Промокоды
model Promo {
  id            Int       @id @default(autoincrement())
  code          String    @unique  // Уникальный код (например: FREE100)
  
  analysesCount Int       // Сколько анализов даёт
  
  maxUses       Int?      // Макс. использований (null = безлимит)
  usedCount     Int       @default(0)
  
  expiresAt     DateTime? // Срок действия (null = бессрочный)
  isActive      Boolean   @default(true)
  
  createdAt     DateTime  @default(now())
  
  activations   PromoActivation[]
}

// Активации промокодов (чтобы 1 юзер не мог активировать дважды)
model PromoActivation {
  id        Int      @id @default(autoincrement())
  promo     Promo    @relation(fields: [promoId], references: [id], onDelete: Cascade)
  promoId   Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  
  createdAt DateTime @default(now())
  
  @@unique([promoId, userId])  // 1 юзер = 1 активация на промокод
}

// Настройки бота (ключ-значение)
model Settings {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String
}
